package main;
import roteiro1.parte3.RelatorioReserva;
import roteiro1.parte3.ServicoQuarto;
import roteiro1.parte3.ServicoReserva;
import roteiro1.parte3.MysqlConnection;
import roteiro1.parte3.OracleConnection;


public class TesteConexao {

	public static void main(String[] args) {
		OracleConnection mysqlConnection = new OracleConnection();
		OracleConnection mysqlConnection = new MysqlConnection();

		ServicoQuarto quarto = new ServicoQuarto(mysqlConnection);
		quarto.verificarQuarto();
		
		ServicoReserva reserva = new ServicoReserva(mysqlConnection);
		reserva.criarReserva();
		
		RelatorioReserva relatorio = new RelatorioReserva(mysqlConnection);
		relatorio.gerarRelatorio();
	
	}
	
}
